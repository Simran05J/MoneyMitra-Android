<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.moneymitra">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyMitra">
        <activity
            android:name=".AddInvestmentActivity"
            android:exported="false" />
        <activity
            android:name=".InvestmentActivity"
            android:exported="false" /> <!-- Dashboard screen (after login/signup) -->
        <activity
            android:name=".DashboardActivity"
            android:exported="false" /> <!-- Splash (launcher) -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MoneyMitra.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Auth activity (login / signup) -->
        <activity
            android:name=".AuthActivity"
            android:exported="true" />
    </application>

</manifest>