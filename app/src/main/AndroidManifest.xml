        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyMitra">
        <activity
            android:name=".ChatActivity"
            android:exported="false" />
        <activity android:name=".SipCalculatorActivity" />
        <activity android:name=".EmiCalculatorActivity" />
        <activity android:name=".FdCalculatorActivity" />
        <activity android:name=".LoanCalculatorActivity" />
        <activity android:name=".PfCalculatorActivity" />
        <activity
            android:name=".CalculatorActivity"
            android:exported="false" />
        <activity
            android:name=".AddEditLiabilityActivity"
            android:exported="false" />
        <activity
            android:name=".LiabilitiesActivity"
            android:exported="false" />
        <activity
            android:name=".AddEditAssetActivity"
            android:exported="false" />
        <activity
            android:name=".AssetsActivity"
            android:exported="false" />
        <activity
            android:name=".AddGoalActivity"
