<resources>

    <!-- MAIN APP THEME -->
    <style name="Theme.MoneyMitra" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Status bar -->
        <item name="android:statusBarColor">#000000</item>

        <!-- BRAND COLORS -->
        <item name="colorPrimary">#6FF2E7</item>
        <item name="colorPrimaryVariant">#6FE6D8</item>
        <item name="colorSecondary">#6FF2E7</item>
        <item name="colorAccent">#6FF2E7</item>

        <!-- Keep button behaviour same -->
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="materialButtonStyle">@style/NoTintButton</item>

        <!-- ðŸ”¥ REMOVE MATERIAL BLUE FROM TEXT FIELDS -->
        <item name="colorControlActivated">#FFFFFF</item> <!-- cursor + underline -->
        <item name="colorControlHighlight">#22FFFFFF</item> <!-- ripple -->
        <item name="android:textColorHighlight">#30FFFFFF</item> <!-- selection bg -->
        <item name="android:colorControlHighlight">#22FFFFFF</item>

    </style>

    <!-- SPLASH THEME -->
    <style name="Theme.MoneyMitra.Splash"
        parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">#000000</item>
    </style>

</resources>
