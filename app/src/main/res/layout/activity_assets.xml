<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true">

    <!-- Green curved SVG header -->
    <ImageView
        android:id="@+id/imgGoalHeader"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/bg_green_header"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- back button -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imgGoalHeader"/>

    <!--Title-->
    <TextView
        android:id="@+id/tvAssetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asset"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/ivBack"
        app:layout_constraintTop_toTopOf="@id/ivBack"
        app:layout_constraintBottom_toBottomOf="@id/ivBack"/>



    <!--Subtitle-->
    <TextView
        android:id="@+id/tvAssetSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See all your assets"
        android:textSize="15sp"
        android:textColor="#2B2B2B"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvAssetTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <TextView
        android:id="@+id/tvTotalAssetsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Assets"
        android:textSize="14sp"
        android:textColor="#CCCCCC"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/imgGoalHeader"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvTotalAssetsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹ 0"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvTotalAssetsLabel"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieAssets"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvTotalAssetsValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAssets"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/pieAssets"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvEmptyAssets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No assets added yet"
        android:textColor="#AAAAAA"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvAssets"
        app:layout_constraintBottom_toBottomOf="@id/rvAssets"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/btnAddAsset"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_margin="18dp"
        android:src="@drawable/ic_add"
        android:scaleType="centerInside"
        android:padding="14dp"
        android:elevation="8dp"
        android:contentDescription="Add Asset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
