<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- HEADER SVG -->
    <ImageView
        android:id="@+id/ivExpenseHeaderBg"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:scaleType="fitXY"
        android:src="@drawable/expense_header_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Expense header background"/>

    <!-- HEADER CONTENT -->
    <LinearLayout
        android:id="@+id/headerContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back"
                app:tint="#000000"
                android:contentDescription="Back"/>

            <TextView
                android:id="@+id/tvExpenseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Expense Tracker"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvExpenseSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Here is Your Financial Report"
            android:textSize="14sp"
            android:textColor="#333333"
            android:gravity="center"/>
    </LinearLayout>

    <!-- MONTH CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMonthSelector"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/headerContent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Month Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/btnPrevMonth"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_prev"
                    app:tint="#000000"
                    android:contentDescription="Previous month"/>

                <TextView
                    android:id="@+id/tvSelectedMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:text="January 2025"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                <ImageView
                    android:id="@+id/btnNextMonth"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_next"
                    app:tint="#000000"
                    android:contentDescription="Next month"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="#DDDDDD"/>

            <!-- Summary -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- BUDGET -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:id="@+id/layoutMonthBudget"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monthly Budget"
                        android:textSize="12sp"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvMonthBudget"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#000000"/>
                </LinearLayout>


                <!-- EXPENSE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expenses"
                        android:textSize="12sp"
                        android:textColor="#00C2A8"/>

                    <TextView
                        android:id="@+id/tvMonthAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0"
                        android:textStyle="bold"
                        android:textColor="#00C2A8"/>
                </LinearLayout>

                <!-- BALANCE -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance"
                        android:textSize="12sp"
                        android:textColor="#555555"/>

                    <TextView
                        android:id="@+id/tvMonthBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹0"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- BUDGET WARNING (FIXED & CONSTRAINED) -->
    <TextView
        android:id="@+id/tvBudgetWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="⚠ Budget exceeded"
        android:textColor="#D32F2F"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardMonthSelector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CHART / EMPTY STATE CONTAINER -->
    <FrameLayout
        android:id="@+id/chartContainer"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvBudgetWarning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/expenseDonutChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvEmptyExpenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No expenses this month"
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:visibility="gone"
            android:layout_gravity="center"/>
    </FrameLayout>


    <!-- LIST -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExpenses"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/chartContainer"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:clipToPadding="false"/>




    <!-- FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddExpense"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@android:color/transparent"
        app:tint="@null"
        android:padding="2dp"
        app:maxImageSize="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
