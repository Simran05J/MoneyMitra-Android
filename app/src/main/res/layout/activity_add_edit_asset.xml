<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/etAssetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Asset name"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"/>

        <Spinner
            android:id="@+id/spAssetCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etAssetValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Asset value"
            android:inputType="numberDecimal"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"/>

        <EditText
            android:id="@+id/etAssetNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Note (optional)"
            android:textColor="@android:color/white"
            android:textColorHint="#AAAAAA"/>

        <Button
            android:id="@+id/btnSaveAsset"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_btn_green"
            android:text="Save Asset"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    </LinearLayout>

</ScrollView>
