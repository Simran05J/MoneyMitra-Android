<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="20dp">

    <!-- Header -->
    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Investment"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- CATEGORY DROPDOWN (STABLE VERSION) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:endIconMode="dropdown_menu"
        app:layout_constraintTop_toBottomOf="@id/txtHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/etCategory"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Category"
            android:background="@drawable/bg_input_dark"
            android:textColor="#FFFFFF"
            android:textColorHint="#80FFFFFF"
            android:padding="16dp"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- INVESTMENT NAME -->
    <EditText
        android:id="@+id/etName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Investment Name"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:background="@drawable/bg_input_dark"
        android:padding="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tilCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- AMOUNT -->
    <EditText
        android:id="@+id/etAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Amount (â‚¹)"
        android:inputType="number"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:background="@drawable/bg_input_dark"
        android:padding="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/etName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- GOAL -->
    <EditText
        android:id="@+id/etGoal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Goal (e.g. Retirement, Travel)"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:background="@drawable/bg_input_dark"
        android:padding="16dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/etAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- SAVE BUTTON -->
    <TextView
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="ADD INVESTMENT"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_add_investment_button"
        app:layout_constraintTop_toBottomOf="@id/etGoal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
